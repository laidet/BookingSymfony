{% extends 'base.html.twig' %}

    {% block body %}

        <main class=" container" style="padding-top: 3rem;">

            <div class="jumbotron" style="background: #EDEDED; padding: 2rem 0 1rem 2rem;">
                <h1 class="h1">Booking</h1>
                <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to facture.</p>
                <hr class="my-4">
                <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" href="{{path('ads_list')}}" role="button">+ d'infos</a>
                </p>
            </div>

            <h3 class="h1" style="margin: 3rem 0 2rem 0;">Annonces les mieux notées</h3>
            <section class="row">

                {% for data in ads %}

                {% include 'ad/_ad.html.twig' with {'ad':data.annonce} %}

                {% endfor %}

            </section>

            <h3 class="h1" style="margin: 3rem 0 2rem 0;">Nos meilleurs annonçeurs</h3>
            <section class="row">

            {% for data in users %}

                <article class="col-md-3">
                    <div class="card mb-3">
                        <h3 class="h4 card-header text-primary bg-warning">{{data.user.fullname}}</h3>
                        
                        <div class="card-body">
                            <img style="float: left; margin-right: 1em;}" src="{{data.user.avatar}}" alt="avatar de {{data.user.fullname}}" class="float-left mr-3">
                            <p>{{data.user.introduction}}</p>
                            <a href="{{path('app_user_show',{'slug':data.user.slug})}}" class="btn btn-warning text-primary">+ d'infos</a>
                        </div>
                    </div>
                </article>

            {% endfor %}

            </section>
        </main>
        
    {% endblock %}

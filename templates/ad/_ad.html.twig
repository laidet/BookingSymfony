{% set url=path('ads_single',{'slug':ad.slug}) %}
            <div class="col-md-4">
                <div class="card">
                        
                        <div class="card-header bg-primary text-light">{{ad.rooms}} chambres <strong>{{ad.price}}€ / nuit</strong></div>
                        <div class="card-body">
                            <a href="{{ url }}">
                                <img src="{{ad.coverImage}}" alt="{{ad.title}}" class="img-fluid" style="height:200px; width:100%; display:block;">
                            </a>
                            <h4 class="card-title mt-3">{{ad.title}}</h4>
                            <p class="card-text">{{ad.introduction}}</p>
                            <a href="{{ url }}" class="btn btn-warning">+ d'infos</a>

                            {% if app.user and app.user == ad.author %} <!-- condition pour que seulement l'auteur de l'annonce puisse la modifier en faisant apparaitre ce lien -->
                            <a href="{{path('ads_edit',{'slug':ad.slug})}}" class="btn btn-info">Modifier</a>
                            {% endif %}

                        </div>
                    <div class="card-footer text-muted">
                        <span>Pas encore noté</span>
                    </div>
                </div>
            </div>
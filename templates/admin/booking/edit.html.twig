{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'une réservation{% endblock %}

{% block body %}

    <main class="container">
        <h1>Modification de la réservation n° {{booking.id}}</h1>

        {{form_start(form)}}
        <div class="row">
            <div class="col">
                {{form_row(form.startDate)}}
                {{form_row(form.endDate)}}
                {{form_row(form.comment)}}
            </div>
            <div class="col">
                {{form_row(form.booker)}}
                {{form_row(form.ad)}}
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-check"></i>Enregistrer</button>
        </div>
        
        {{form_end(form)}}

    </main>

{% endblock %}